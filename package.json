{
  "name": "chat",
  "version": "1.0.1",
  "description": "app chat",
  "scripts": {
    "dev": "parcel static/pages/index.hbs --no-cache",
    "build": "parcel build static/pages/index.hbs",
    "serve": "node server.js",
    "start": "npm run build && npm run serve",
    "lint": "eslint src --ext .js,.ts && npx stylelint \"**/*.scss\"",
    "fix": "eslint src --ext .js,.ts --fix && npx stylelint \"**/*.scss\" --fix",
    "test": "mocha -r ts-node/register -r ignore-styles -r mock-local-storage -r jsdom-global/register src/**/*.spec.ts --timeout 10000"
  },
  "author": "a.anikin",
  "license": "ISC",
  "browserslist": [
    "> 0.25%, not dead"
  ],
  "staticFiles": {
    "staticPath": "static/files",
    "staticOutPath": "static"
  },
  "devDependencies": {
    "@anikin/parcel-transformer-handlebars": "^1.0.9",
    "@anikin/parcel-transformer-template-precompile": "^1.0.1",
    "@parcel/config-default": "^2.0.0",
    "@parcel/transformer-sass": "^2.0.0",
    "@types/chai": "^4.2.22",
    "@types/express": "^4.17.13",
    "@types/mocha": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^5.2.0",
    "@typescript-eslint/parser": "^5.2.0",
    "chai": "^4.3.4",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.25.2",
    "express": "^4.17.1",
    "ignore-styles": "^5.0.1",
    "jsdom": "18.1.0",
    "jsdom-global": "3.0.2",
    "mocha": "^9.1.3",
    "mock-local-storage": "^1.1.17",
    "mock-xmlhttprequest": "^7.0.4",
    "parcel": "^2.0.0",
    "parcel-reporter-static-files-copy": "^1.3.0",
    "stylelint": "^14.0.1",
    "stylelint-config-recommended-scss": "^5.0.0",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.4"
  },
  "dependencies": {}
}
